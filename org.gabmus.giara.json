{
    "app-id": "org.gabmus.giara",
    "command": "giara",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "21.08",
            "add-ld-path": ".",
            "no-autodownload": true,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [
        "/include",
        "/lib/debug"
    ],
    "modules": [
        "python-deps.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "commit": "3d4aae79c49751d57a075a8b94f0dc96ac0d5b2f"
                }
            ]
        },
        {
            "name": "giara",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/giara",
                    "tag": "1.0.1"
                }
            ]
        }
    ]
}